<xml>
  <scene>
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="32"/>
        <translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate y="20"/>
      </object>
      <object type="plane" name="WallLeft" material="wallRed">
        <scale value="32"/>
        <rotate angle="90" y="1"/>
        <translate x="-15"/>
      </object>
      <object type="plane" name="WallRight" material="wallGreen">
        <scale value="32"/>
        <rotate angle="-90" y="1"/>
        <translate x="15"/>
      </object>
    </object>
    <object type="sphere" name="sphere1" material="reflective">
      <scale value="6"/>
      <translate x="0" y="4" z="6"/>
    </object>
    <object type="sphere" name="sphere2" material="refractive">
      <scale value="5"/>
      <translate x="9" y="-3" z="5"/>
    </object>
    <object type="sphere" name="sphere3" material="smooth">
      <scale value="5"/>
      <translate x="-9" y="-3" z="5"/>
    </object>

    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  r="1" g="1" b="1" value="0.7"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallRed">
      <diffuse  r="1.0" g="0.2" b="0.2" value="0.7"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallGreen">
      <diffuse r="0.2" g="1.0" b="0.2" value="0.7"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="reflective">
      <diffuse value="0"/>
      <specular value="0.9"/>
      <glossiness value="128"/>
      <reflection value="0.9"/>
    </material>
    <material type="blinn" name="refractive">
      <diffuse value="0"/>
      <specular value="0"/>
      <glossiness value="1024"/>
      <refraction value="0.9" index="1.52"/>
    </material>
    <material type="blinn" name="smooth">
      <diffuse value="0.7"/>
      <specular value="0.3"/>
      <glossiness value="64"/>
    </material>

    <!-- Lights -->
    <light type="point" name="pointLight">
      <intensity value="500"/>
      <position x="0" y="0" z="18"/>
	  <size value="1"/>
	  <attenuation value="1"/>
    </light>
  </scene>

  <camera gamma="sRGB">
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="1280"/>
    <height value="720"/>
  </camera>
</xml>
